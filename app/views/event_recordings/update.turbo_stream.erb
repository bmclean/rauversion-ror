
<%= turbo_stream.update("event-recordings-item-#{@event_recording.id}") do %>
  <%= render "event_recording", event_recording: @event_recording %>
<% end %>

<%= turbo_stream.replace("flashes") do %>
  <%= render "shared/flash" %>
<% end %>

<% if @event_recording.errors.any? %>
  <%= render "shared/modal" do %>
    <%= render "form", event_recording: @event_recording %>
  <% end %>
<% else %>
  <%= turbo_stream.update "modal" do %>
<% end %>
<% end %>