<ul
  role="list"
  class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8"
>
  <% event.event_recordings.each do |item| %>
    <li class="relative">
      <iframe
        src="<%= item.iframe %>"
        phx-update="ignore"
        frameborder="0"
        allowfullscreen="true"
        scrolling="no"
        height="320"
        width="100%"
      >
      </iframe>
    </li>
  <% end %>
</ul>