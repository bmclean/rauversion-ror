<div>
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100">
      Descubre pistas y Ã¡lbumes
    </h1>
    <p class="mt-4 max-w-xl text-sm text-gray-700 dark:text-gray-300">
      Nuestra lista de seguidores de la comunidad conservada.
    </p>
  </div>
</div>


<section aria-labelledby="products-heading" 
  class="max-w-2xl mx-auto pt-12-- pb-16 px-4 sm:pt-16-- sm:pb-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h2 id="products-heading" class="sr-only">Pistas</h2>

  <div class="grid grid-cols-1 gap-y-10 sm:grid-cols-2 gap-x-6 lg:grid-cols-5 xl:grid-cols-6 xl:gap-x-8" id="infinite-scroll" phx-hook="InfiniteScroll" phx-update="append" data-page="1" phx-target="1" data-total-pages="6" data-phx-component="1">

    <% @tracks.each do |track| %>
      <%= link_to track_path(track), class: "group space-y-2 p-2 hover:bg-gray-800 rounded-md" do %>
        <div class="w-full aspect-w-1 aspect-h-1 bg-gray-200 dark:bg-gray-900 rounded-lg overflow-hidden xl:aspect-w-7 xl:aspect-h-8">
          <div
            phx-hook="PlayButton" 
            data-audio-id="<%= track.id %>" 
            class="smooth-color group-hover:absolute group-hover:z-10 w-full h-full flex justify-center items-center">
            <button data-play-button="button" class="smooth-grow flex justify-center items-center w-24 h-24 rounded-full bg-black border-4 border-brand-100 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"></path>
              </svg>
            </button>
          </div>
          <%= image_tag track.cover_url(:small), class: "w-full h-full object-center object-cover group-hover:opacity-75" %>
        </div>

        <p class="mt-1 text-lg- font-medium leading-none text-gray-900 dark:text-gray-100 truncate">
          <%= track.title %>
        </p>

        <h3 class="mt-4-- text-xs text-gray-700 dark:text-gray-300">
          <%= track.user.username %>
        </h3>
      <% end %>
    <% end %>
  </div>
</section>