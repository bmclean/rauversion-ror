<%= turbo_frame_tag :follows_button do %>
  <% if current_user.follows?(user) %>
    <%= button_to user_follows_path(user.username), class: "button-large-selected" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewbox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fillRule="evenodd"
          d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
          clipRule="evenodd"
        />
      </svg>
      <span class="mx-2"><%= t("users.following") %></span>
    <% end %>
  <% else %>
    <%= button_to user_follows_path(user.username), class: "button-large" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" view-box="0 0 20 20" fill="currentColor">
        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"></path>
      </svg>
      <span class="mx-2"><%= t("users.follow") %></span>
    <% end %>
  <% end %>
<% end %>